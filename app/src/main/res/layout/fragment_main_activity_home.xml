<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ui.MainActivity">

    <EditText
        android:id="@+id/homeFragment_editText_song"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="32dp"
        android:hint="Name Of The Song"
        android:inputType="textCapWords"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/homeFragment_editText_artist"/>


    <EditText
        android:id="@+id/homeFragment_editText_artist"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:inputType="textCapWords"
        android:hint="Name Of The Artist"
        app:layout_constraintTop_toTopOf="@id/homeFragment_editText_song"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/homeFragment_button_submitLyrics"/>

    <Button
        android:id="@+id/homeFragment_button_submitLyrics"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Submit"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>